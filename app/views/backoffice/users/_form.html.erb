<%= form_with(model: [:backoffice, user], local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
      <label>Name</label>
      <%= form.text_field :name, class: "form-control", placeholder: "Name"%>
  </div>

  <div class="form-group">
      <label>E-mail</label>
      <%= form.text_field :email, class: "form-control", placeholder: "example@domain.com"%>
  </div>

  <div class="form-group">
      <label>Password</label>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div class="form-group">
      <label>Password Confirmation</label>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
  </div>

  <div class="form-group">
    <div class="col-lg-6">
      <%= link_to backoffice_users_path, class: "btn btn-outline btn-danger btn-block", data: { title: 'Are you sure?', type: "question", confirm: "If you leave now, all changed data will be lost!" } do %>
        <i class="fa fa-arrow-left"></i>
      <% end %>
    </div>
    <div class="col-lg-6">
      <%= button_tag(type: "submit", class: "btn btn-outline btn-success btn-block") do %>
        <i class="fa fa-check"></i>
      <% end %>
    </div>
  </div>
<% end %>

