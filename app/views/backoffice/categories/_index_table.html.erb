<table width="100%" class="table table-striped table-bordered table-hover">
  <thead>
      <tr>
          <th>#</th>
          <th>ID</th>
          <th>Description</th>
          <th colspan=2 style="width: 10%"></th>
      </tr>
  </thead>
  <tbody>
      <% @categories.each_with_index do |category, index| %>
          <tr class=<%= even_odd(index) %>>
              <td><%= index + 1%></td>
              <td><%= category.id %></td>
              <td><%= category.description %></td>
              <td>
                  <%= link_to edit_backoffice_category_path(category), class: "btn btn-outline btn-primary btn-block" do %>
                      <i class="fa fa-edit"></i>
                  <% end %>
              </td>
              <td>
                  <%= link_to backoffice_category_path(category), class: "btn btn-outline btn-danger btn-block", method: :delete, data: { title: 'Are you sure?', type: "warning", confirm: "You won't be able to revert this!" } do %>
                      <i class="fa fa-trash-o"></i>
                  <% end %>
              </td>
          </tr>
      <% end %>
      <tr>
          <td colspan=5>
              <%= link_to new_backoffice_category_path, class: "btn btn-outline btn-success btn-block" do %>
                  <i class="fa fa-plus"></i>
              <% end %>
          </td>
      </tr>
  </tbody>
</table>