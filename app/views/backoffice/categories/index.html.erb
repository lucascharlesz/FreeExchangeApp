<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categories</h1>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4><b>Categories</b></h4>
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <table width="100%" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Description</th>
                                            <th colspan=2 style="width: 10%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @categories.each_with_index do |category, index| %>
                                            <tr class=<%= even_odd(index) %>>
                                                <td><%= category.id %></td>
                                                <td><%= category.description %></td>
                                                <td>
                                                    <%= link_to edit_backoffice_category_path(category), class: "btn btn-outline btn-primary btn-block" do %>
                                                        <i class="fa fa-edit"></i>
                                                    <% end %>
                                                </td>
                                                <td>
                                                    <%= link_to backoffice_category_path(category), class: "btn btn-outline btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } do %>
                                                        <i class="fa fa-trash-o"></i>
                                                    <% end %>
                                                </td>
                                            </tr>
                                        <% end %>
                                        <tr>
                                            <td colspan=4>
                                                <%= link_to new_backoffice_category_path, class: "btn btn-success btn-block" do %>
                                                    <i class="fa fa-plus"></i>
                                                <% end %>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>  
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
